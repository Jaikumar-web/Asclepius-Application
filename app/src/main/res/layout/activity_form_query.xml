<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context=".formQuery">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_baseline_accessibility_new_24"
        android:background="@drawable/edittext"
        android:hint="Enter your name " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/mail"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:background="@drawable/edittext"
        android:hint="Enter your Mail ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact no"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_margin="5dp"
        android:id="@+id/contact"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
        android:background="@drawable/edittext"
        android:hint="Enter your Contact no  " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem "
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:id="@+id/problem"
        android:hint="Problem Description  " />

    <EditText
        android:id="@+id/Date"
        android:background="@drawable/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:hint="Enter date of appointment "
        android:textSize="25sp"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn"
        android:textSize="30sp"
        android:background="@drawable/btn_background"

        />

</LinearLayout>